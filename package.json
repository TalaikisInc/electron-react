{
  "name": "electron-react",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "dependencies": {
    "cross-env": "^5.2.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "scripts": {
    "start": "npm run start:react",
    "start:react": "cross-env NODE_ENV=dev webpack-dev-server --mode development --progress",
    "start:electron": "ross-env NODE_ENV=dev electron .",
    "build": "webpack --mode production",
    "dist": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "postinstall": "./node_modules/.bin/electron-rebuild"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@electron-forge/cli": "^6.0.0-beta.43",
    "@electron-forge/maker-deb": "^6.0.0-beta.43",
    "@electron-forge/maker-rpm": "^6.0.0-beta.43",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.43",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.1.0",
    "electron": "^6.0.0",
    "electron-builder": "^21.2.0",
    "electron-rebuild": "^1.8.5",
    "electron-squirrel-startup": "^1.0.0",
    "eslint": "^6.1.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "lodash": "^4.17.15",
    "react-inlinesvg": "^1.1.5",
    "style-loader": "^0.23.1",
    "svg-inline-loader": "^0.8.0",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  },
  "build": {
    "productName": "Electron",
    "appId": "com.electron.app",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "**/*",
      "build/**/*",
      "assets/**/*",
      "!dist/**/*",
      "!src/**/*",
      "node_modules/**/*"
    ]
  },
  "browser": {
    "fs": false,
    "os": false,
    "path": false
  }
}
